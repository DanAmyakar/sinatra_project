<h2>Update <%= @ship.ship_name%></h2>
<br />
<form method="POST" action="/ships/<%= @ship.id %>/">
    <input id="hidden" type="hidden" name="_method" value="Patch"/>
    <label>Edit the ship name</label><br />
    <input type="text" name="ship_name" value="<%= @ship.ship_name %>"/><br />
    <br />
    <label>Edit the number of cargo slots</label><br />
    <input type="text" name="cargo_slots" value="<%= @ship.cargo_slots %>"/><br />
    <br />
    <input type="submit" value="Submit" />
</form>